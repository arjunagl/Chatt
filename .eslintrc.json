{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "rules": {
    "prettier/prettier": "error",
    "linebreak-style": "off",
    "no-console": "off"
  },
  "globals": {
    "navigator": "readonly",
    "document": "readonly",
    "console": "readonly",
    "PUBLIC_URL": "readonly",
    "CHATT_SERVER_URL": "readonly"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "import/resolver": "webpack"
  }
}
